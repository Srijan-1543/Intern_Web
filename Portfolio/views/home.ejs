<!DOCTYPE html>
<html>
<head>
  <title>Home Page</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      background-color: #f2f2f2;
      color: #333;
      font-family: Arial, sans-serif;
    }

    h1 {
      color: #333;
      text-align: center;
      margin-top: 50px;
    }

    nav {
      background-color: #333;
      padding: 10px;
      margin-bottom: 20px;
    }

    nav a {
      color: #fff;
      text-decoration: none;
      margin-right: 10px;
    }

    nav a:hover {
      text-decoration: underline;
    }

    h2 {
      color: #333;
      text-align: center;
      margin-bottom: 20px;
    }

    .comment {
      background-color: #fff;
      padding: 10px;
      margin-bottom: 20px;
      border-radius: 5px;
    }

    .comment-text {
      color: #333;
      margin-bottom: 10px;
    }

    .comment-author {
      color: #333;
    }

    input[type="text"],
    input[type="email"],
    input[type="password"],
    input[type="checkbox"] {
      width: 100%;
      padding: 10px;
      border: none;
      border-radius: 4px;
      font-size: 16px;
      margin-bottom: 10px;
      background-color: #f2f2f2;
      color: #333;
    }

    input[type="checkbox"] {
      margin-bottom: 20px;
    }

    button[type="submit"] {
      background-color: #333;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
      display: block;
      margin: 0 auto;
    }

    button[type="submit"]:hover {
      background-color: #555;
    }

    p {
      text-align: center;
      margin-top: 20px;
      color: #333;
    }

    p a {
      color: #333;
      text-decoration: none;
      font-weight: bold;
    }
  </style>
  <script src="/js/popup.js" defer></script>
</head>
<body>
  <h1>Home Page</h1>
  <nav>
    <a href="/">Home</a>
    <% if (loggedIn) { %>
      <a href="/logout">Logout</a>
      <a href="/projects">About</a>
    <% } else { %>
      <a href="/login">Login</a>
    <% } %>
    <a href="/search">Main</a>
  </nav>

  <h2>Comments</h2>
  <% if (loggedIn && isAdmin) { %>
    <form action="/delete-comments" method="POST" style="display: inline;">
      <button type="submit" onclick="return confirm('Are you sure you want to delete all comments?')">Delete All Comments</button>
    </form>
    <br><br>
  <% } %>

  <% if (!loggedIn) { %>
    <div class="warning-message">
      Please login to leave a comment.
    </div>
  <% } %>
  <% comments.forEach(function(comment) { %>
    <div class="comment">
      <p class="comment-text"><%= comment.text %></p>
      <% if (comment.userId && userIdMap[comment.userId]) { %>
        <p class="comment-author">Comment by: <%= userIdMap[comment.userId].name %></p>
      <% } %>
    </div>
  <% }); %>

  <% if (loggedIn) { %>
    <div class="comment">
      <form action="/comment" method="POST">
        <input type="text" name="comment" placeholder="Enter your comment" required>
        <button type="submit">Submit Comment</button>
      </form>
    </div>
  <% } %>
</body>
</html>
